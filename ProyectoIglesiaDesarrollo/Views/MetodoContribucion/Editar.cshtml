@model MetodoContribucionVm
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form method="post" asp-action="Editar">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Metodo" class="control-label">Metodo</label>
            <input asp-for="Metodo" class="form-control" />
            <span asp-validation-for="Metodo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn-success">
        </div>
    </form>
</div>

