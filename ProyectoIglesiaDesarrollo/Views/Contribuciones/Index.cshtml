@model List<ContribucionesVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoIglesiaDesarrollo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoIglesiaDesarrollo.styles.css" asp-append-version="true" />
    <link href="~/css/rol/rolindex.css" rel="stylesheet" />
    <style>

        /* General styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #1c1c1c;
            margin: 0;
            padding: 20px;
            color: #e0e0e0;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            color: #ffffff;
            margin-bottom: 20px;
        }

        /* Form styles */
        form {
            background: #2a2a2a;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        .danger .alert {
            margin-bottom: 20px;
        }

        .btn-success {
            background-color: #ff7f00;
            border: none;
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #e67300;
            }

        /* Table styles */
        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px 15px;
                border: 1px solid #444;
                text-align: left;
                color: #e0e0e0;
            }

            .table th {
                background-color: #ff7f00;
                color: white;
            }

            .table tr:nth-child(even) {
                background-color: #2e2e2e;
            }

        /* Scrollable table */
        .ScrollB {
            max-height: 400px;
            overflow-y: auto;
        }

        .table .btn-info {
            background-color: #ff7f00;
            border: none;
            color: #ffffff;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 5px;
            transition: background-color 0.3s ease;
        }

            .table .btn-info:hover {
                background-color: #e67300;
            }

        /* Alert styles */
        .alert {
            padding: 15px;
            background-color: #ff9800;
            color: #ffffff;
            border-radius: 5px;
            margin-bottom: 20px;
        }

            .alert .close {
                background: none;
                border: none;
                font-size: 20px;
                cursor: pointer;
                color: #ffffff;
            }

                .alert .close:hover {
                    color: #f2f2f2;
                }

        /* No roles message */
        p {
            font-size: 18px;
            color: #cccccc;
            text-align: center;
            margin-top: 20px;
        }

    </style>
</head>
<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>@TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Agregar" class="btn-success">
    </div>
    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Miembro</th>
                        <th>Cantidad</th>
                        <th>Metodo</th>
                        <th>Acciones</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Miembro.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>@item.MetodoContribucion.Metodo</td>
                            
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Contribuciones", new { @ContribucionesId = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Eliminar", "Contribuciones", new { @ContribucionesId = item.Id }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
    }
    else
    {
        <p>No hay Contribuciones </p>
    }
</form>

