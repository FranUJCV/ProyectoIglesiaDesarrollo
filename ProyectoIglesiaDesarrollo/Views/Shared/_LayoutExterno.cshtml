<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoIglesiaDesarrollo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoIglesiaDesarrollo.styles.css" asp-append-version="true" />
    <link href="~/css/login.css" rel="stylesheet" />

    <style>

        body {
            font-family: Arial, sans-serif;
            background-color: #1c1c1c;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #e0e0e0;
        }

        .row-6 {
            width: 100%;
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background-color: #2a2a2a;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        .main {
            padding: 20px;
        }

        .login .insert {
            padding: 20px;
            background-color: #2a2a2a;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

            .login .insert center {
                margin-bottom: 20px;
            }

        form {
            display: flex;
            flex-direction: column;
        }

            form div {
                margin-bottom: 15px;
            }

        label.control-label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
            color: #e0e0e0;
        }

        input.form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #444;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: #3a3a3a;
            color: #e0e0e0;
        }

        span.text-danger {
            color: red;
            font-size: 0.9em;
        }

        .sign {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .submit input {
            width: 100%;
            padding: 10px;
            background-color: #ff7f00;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .submit input:hover {
                background-color: #e67300;
            }

        .clear {
            clear: both;
        }

    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProyectoIglesiaDesarrollo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
